<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".PlayGame">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showRound"
        android:text=" Round - 0"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@drawable/roundandchancesbg"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="230dp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showChances"
        android:text=" Chances - 3"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@drawable/roundandchancesbg"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginStart="230dp"
        android:layout_marginEnd="30dp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showscore"
        android:text="Score - 0"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/scorebg"
        android:textColor="#5C2B65"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp">
    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/question"
        android:src="@drawable/img_1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="130dp">
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/showWord"
        android:text=""
        android:gravity="center"
        android:textSize="45sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/gettextbg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/linear">


        <EditText
            android:id="@+id/player1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Type your Answer here"
            android:inputType="text"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"></EditText>
    </LinearLayout>
    <ImageView
        android:layout_width="70dp"
        android:background="@drawable/shape"
        android:layout_height="70dp"
        android:layout_below="@+id/linear"
        android:id="@+id/corw"
        android:layout_marginTop="40dp"
        android:src="@drawable/thumb"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"></ImageView>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        android:layout_below="@id/corw"
        android:layout_marginTop="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="Submit"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/shape"
        android:textAllCaps="false"
        android:textSize="25sp"
        ></com.google.android.material.button.MaterialButton>

</RelativeLayout>