<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="380dp"
        android:layout_height="390dp"
        android:src="@drawable/newbrain"
        android:id="@+id/showImg"
        android:layout_margin="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showImg"
        android:id="@+id/showText"
        android:text="Unscramble Word"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="#0B538C"></TextView>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:layout_below="@+id/showText"
        android:layout_marginTop="60dp"></ProgressBar>

</RelativeLayout>